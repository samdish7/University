<?xml version="1.0" encoding="utf-8"?>
<!--Revamped by Sam Disharoon 2020;
Used for "Today" in library hours-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/text_item5_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="@string/textView"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" /><!--Decreased text size by 2-->

    <TextView
        android:id="@+id/text_item5_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="@string/textView"
        android:textColor="#000000"
        android:textSize="18sp" /><!--Decreased text size by 2-->
</LinearLayout>