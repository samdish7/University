<?xml version="1.0" encoding="utf-8"?>
<!--Revamped by Sam Disharoon 2020
used in Library Hours Fragment-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_item4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingTop="2dp"
    android:paddingRight="16dp"
    android:paddingBottom="2dp"><!--Decreased box size by 24-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_item4_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/textView"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_item4_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/textView"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="TextView" />

        <TextView
            android:id="@+id/text_item4_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/textView"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/text_item4_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:text="@string/textView"
        android:textColor="#000000"
        android:textSize="16sp" /> <!--Added paddingEnd and decreased
        padding by 2-->

</LinearLayout>