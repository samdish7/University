        <View
            android:id="@+id/titleDivider"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/colorPrimary"
            android:gravity="fill_horizontal"
            android:scaleType="fitXY" />-->
</LinearLayout>