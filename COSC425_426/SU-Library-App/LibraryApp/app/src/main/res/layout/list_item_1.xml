<?xml version="1.0" encoding="utf-8"?>
<!--Revamped by Sam Disharoon 2020-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item1"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"> <!--Decreased Layout height by 8-->

    <ImageView
        android:id="@+id/image_item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/imageView" />

    <TextView
        android:id="@+id/text_item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_item1"
        android:text="@string/textView"
        android:textColor="#000000"
        android:layout_gravity="center_vertical"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/arrow_right_1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:src="@drawable/right_arrow"/>
</RelativeLayout>